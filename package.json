{
  "name": "ai-avatar-chat",
  "version": "1.0.0",
  "description": "AI Avatar Chat application with React frontend and Node.js backend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "start": "npm run dev"
  },
  "keywords": [
    "ai",
    "avatar",
    "chat",
    "react",
    "rive",
    "openai",
    "azure",
    "speech"
  ],
  "author": "Pat Flaherty",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patflaherty321/ai-avatar-chat.git"
  }
}
