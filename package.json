{
  "name": "ai-avatar-chat-backend",
  "version": "1.0.0",
  "description": "AI Avatar Chat - Express.js Backend for Railway deployment",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon backend/app.js",
    "build": "echo 'No build needed for backend'",
    "local-dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "cd frontend && npm start", 
    "backend": "cd backend && npm start",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "ai",
    "avatar",
    "chat",
    "react",
    "rive",
    "openai",
    "azure",
    "speech"
  ],
  "author": "Pat Flaherty",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.0.0",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patflaherty321/ai-avatar-chat.git"
  }
}
