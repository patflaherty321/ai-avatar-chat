{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "echo 'Skipping root install'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://teams.microsoft.com *.teams.microsoft.com https://*.teams.microsoft.com https://www.iamp.at *.iamp.at;"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Feature-Policy",
          "value": "microphone 'self' https://teams.microsoft.com *.teams.microsoft.com; camera 'self' https://teams.microsoft.com *.teams.microsoft.com; autoplay 'self'"
        },
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self \"https://teams.microsoft.com\" \"https://*.teams.microsoft.com\"), camera=(self \"https://teams.microsoft.com\" \"https://*.teams.microsoft.com\"), autoplay=(self)"
        }
      ]
    }
  ]
}
